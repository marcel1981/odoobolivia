<openerp>
  <data>
    <!-- explicit list view definition -->
    
    <record model="ir.ui.view" id="cliente.list">
      <field name="name">cliente list</field>
      <field name="model">cliente.cliente</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
          <field name="value"/>
          <field name="value2"/>
        </tree>
      </field>
    </record>
    

    <!-- actions opening views on models -->
    
    <record model="ir.actions.act_window" id="cliente.action_window">
      <field name="name">cliente window</field>
      <field name="res_model">cliente.cliente</field>
      <field name="view_mode">tree,form</field>
    </record>
    

    <!-- server action to the one above -->
    
    <record model="ir.actions.server" id="cliente.action_server">
      <field name="name">cliente server</field>
      <field name="model_id" ref="model_cliente_cliente"/>
      <field name="code">
        action = {
          "type": "ir.actions.act_window",
          "view_mode": "tree,form",
          "res_model": self._name,
        }
      </field>
    </record>
    

    <!-- Top menu item -->
    
    <menuitem name="cliente" id="cliente.menu_root"/>
    
    <!-- menu categories -->
    
    <menuitem name="Menu 1" id="cliente.menu_1" parent="cliente.menu_root"/>
    <menuitem name="Menu 2" id="cliente.menu_2" parent="cliente.menu_root"/>
    
    <!-- actions -->
    
    <menuitem name="List" id="cliente.menu_1_list" parent="cliente.menu_1"
              action="cliente.action_window"/>
    <menuitem name="Server to list" id="cliente" parent="cliente.menu_2"
              action="cliente.action_server"/>
    
  </data>
</openerp>