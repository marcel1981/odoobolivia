<?xml version="1.0" encoding="UTF-8"?>
<template>
    <t t-extend="PosTicket">
        <t t-jquery=".receipt-orderlines" t-operation="before">       
        	<span class='bold'>Cliente:</span>         	        	
            <span class='js_customer_name'> 
            	<t t-if="widget.pos.get_client()">
                	<t t-esc="widget.pos.get_client().name" />
                </t>
                <t t-if="!widget.pos.get_client()">
                	Ninguno
                </t>
			</span>				
			<span  class='bold'>Phone:</span>
			<span class='js_customer_name'> 
            	<t t-if="widget.pos.get_client()">
                	<t t-esc="widget.pos.get_client().phone" />
                </t>
                <t t-if="!widget.pos.get_client()">
                	Ninguno
                </t>
			</span>			
			<br/><br/>
        </t>
                
        <t t-jquery=".receipt-orderlines" t-operation="replace">
        	<div line-ratio = '0.6'>
        		<table class='receipt-orderlines'>
                	<colgroup>
	                    <col width='70%' />
    	                <col width='15%' />
        	            <col width='15%' />
            	    </colgroup>                	                		
    					<tr class="border-black">
        					<th>Description</th>
	            			<th class="pos-right-align">Quantity</th>
    	        			<th class="pos-right-align">Price</th>
        				</tr>					             
	                <tr t-foreach="orderlines" t-as="orderline">
    	                <td>
        	                <t t-esc="orderline.get_product().display_name"/>
            	             <t t-if="orderline.get_discount() > 0">
                	            <div class="pos-disc-font">
                    	            With a <t t-esc="orderline.get_discount()"/>% discount
                        	    </div>
                        	</t>
                    	</td>
                    	<td class="pos-right-align">
	                        <t t-esc="orderline.get_quantity_str_with_unit()"/>
    	                </td>
        	            <td class="pos-right-align">
            	            <t t-esc="widget.format_currency(orderline.get_display_price())"/>
                	    </td>
	                </tr>
    	        </table>
            </div>
        </t> 
    </t>    
</template>